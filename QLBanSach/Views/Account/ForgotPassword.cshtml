@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}


<h2 class="text-center mb-4 fw-bold" style="color:#0d6efd;">Quên mật khẩu</h2>

<form asp-action="ForgotPassword" method="post" class="mt-3">

    <div class="mb-3">
        <label class="form-label fw-semibold">Email</label>
        <input name="email" type="email" class="form-control" placeholder="Nhập email của bạn..." required />
    </div>
    <br />
    <button type="submit" class="btn w-100 py-2"
            style="background:#0d6efd; color:white; border-radius:12px;">
        Gửi mật khẩu mới
    </button>
</form>
