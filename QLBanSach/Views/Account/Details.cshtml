@model QLBanSach.Models.NguoiDung
<link href="~/css/account.css" rel="stylesheet" />
<style>
    .user-profile .card {
        border-radius: 14px;
        overflow: hidden;
    }

    .profile-left {
        background: linear-gradient(135deg, #0d6efd, #5aa0ff);
        color: white;
        border-radius: 12px;
        padding: 30px 15px;
    }

        .profile-left img {
            border: 4px solid white;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

    .profile-btn {
        background: white;
        color: #0d6efd;
        font-weight: 600;
        padding: 8px 18px;
        border-radius: 8px;
        border: none;
        transition: 0.2s;
    }

        .profile-btn:hover {
            background: #e6efff;
        }

    .profile-back {
        background: rgba(255,255,255,0.2);
        color: white !important;
        font-weight: 600;
        padding: 8px 18px;
        border-radius: 8px;
        border: 1px solid white;
        transition: 0.2s;
    }

        .profile-back:hover {
            background: white;
            color: #0d6efd !important;
        }

    .info-item dt {
        color: #0d6efd;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .info-box {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
    }

</style>
<link href="~/css/account.css" rel="stylesheet" />

<div class="container mt-4 user-profile">
    <div class="card shadow p-0 border-0">

        <div class="row">

            <!-- Vùng Ảnh / Thông tin ngắn -->
            <div class="col-md-3 text-center profile-left">

                <img src="~/Avatar/Avatar.jpg"
                     class="img-fluid rounded-circle mb-3"
                     style="width: 170px; height: 170px; object-fit: cover;">


                <h5 class="mt-2 fw-bold">@Model.HoTen</h5>
                <p class="opacity-75">@Model.Email</p>

                <div class="d-flex justify-content-center mt-3" style="gap: 14px;">
                    <a asp-action="Edit" asp-route-id="@Model?.MaNguoiDung" class="profile-btn">
                        <i class="fa-solid fa-pen-to-square"></i> Sửa
                    </a>

                    <form asp-controller="Home" asp-action="Index" method="post">
                        <button type="submit" class="profile-back">
                            <i class="fa-solid fa-arrow-left"></i> Back
                        </button>
                    </form>
                </div>
            </div>

            <!-- Vùng thông tin -->
            <div class="col-md-9 p-4">

                <h4 class="fw-bold mb-3"><i class="fa-solid fa-user"></i> Thông tin tài khoản</h4>

                <div class="info-box shadow-sm">
                    <dl class="row info-item">

                        <dt class="col-sm-3">
                            <i class="fa-solid fa-id-badge"></i> Tài khoản
                        </dt>
                        <dd class="col-sm-9">@Model.TaiKhoan</dd>

                        <dt class="col-sm-3">
                            <i class="fa-solid fa-signature"></i> Họ tên
                        </dt>
                        <dd class="col-sm-9">@Model.HoTen</dd>

                        <dt class="col-sm-3">
                            <i class="fa-solid fa-envelope"></i> Email
                        </dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">
                            <i class="fa-solid fa-phone"></i> SĐT
                        </dt>
                        <dd class="col-sm-9">@Model.SoDienThoai</dd>

                        <dt class="col-sm-3">
                            <i class="fa-solid fa-location-dot"></i> Địa chỉ
                        </dt>
                        <dd class="col-sm-9">@Model.DiaChi</dd>

                        <dt class="col-sm-3">
                            <i class="fa-solid fa-user-shield"></i> Vai trò
                        </dt>
                        <dd class="col-sm-9">@(Model.VaiTro ? "Admin" : "User")</dd>

                    </dl>
                </div>

            </div>
        </div>
    </div>
</div>