@model QLBanSach.Models.Sach

@{
    ViewData["Title"] = "Thêm sách";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">

    <h2 class="fw-bold text-primary mb-3 text-center">
        <i class="bi bi-book-fill me-2"></i> Thêm sách mới
    </h2>

    <div class="d-flex justify-content-center">
        <div class="card shadow-lg p-4" style="width: 600px; border-radius: 16px;">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Mã sách -->
                <div class="mb-3">
                    <label asp-for="MaSach" class="form-label fw-semibold"></label>
                    <input asp-for="MaSach" class="form-control form-control-lg" />
                    <span asp-validation-for="MaSach" class="text-danger"></span>
                </div>

                <!-- Tên sách -->
                <div class="mb-3">
                    <label asp-for="TenSach" class="form-label fw-semibold"></label>
                    <input asp-for="TenSach" class="form-control form-control-lg" />
                    <span asp-validation-for="TenSach" class="text-danger"></span>
                </div>

                <!-- Tác giả -->
                <div class="mb-3">
                    <label asp-for="TacGia" class="form-label fw-semibold"></label>
                    <input asp-for="TacGia" class="form-control form-control-lg" />
                    <span asp-validation-for="TacGia" class="text-danger"></span>
                </div>

                <!-- Nhà xuất bản -->
                <div class="mb-3">
                    <label asp-for="NhaXuatBan" class="form-label fw-semibold"></label>
                    <input asp-for="NhaXuatBan" class="form-control form-control-lg" />
                    <span asp-validation-for="NhaXuatBan" class="text-danger"></span>
                </div>

                <!-- Năm XB -->
                <div class="mb-3">
                    <label asp-for="NamXuatBan" class="form-label fw-semibold"></label>
                    <input asp-for="NamXuatBan" class="form-control form-control-lg" />
                    <span asp-validation-for="NamXuatBan" class="text-danger"></span>
                </div>

                <!-- Giá -->
                <div class="mb-3">
                    <label asp-for="Gia" class="form-label fw-semibold"></label>
                    <div class="input-group input-group-lg">
                        <input asp-for="Gia" class="form-control" />
                        <span class="input-group-text">VNĐ</span>
                    </div>
                    <span asp-validation-for="Gia" class="text-danger"></span>
                </div>

                <!-- Số lượng -->
                <div class="mb-3">
                    <label asp-for="SoLuong" class="form-label fw-semibold"></label>
                    <input asp-for="SoLuong" class="form-control form-control-lg" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>

                <!-- Mô tả -->
                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label fw-semibold"></label>
                    <textarea asp-for="MoTa" class="form-control" style="min-height: 110px;"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <!-- Ảnh -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Ảnh sách</label>
                    <input name="AnhFile" type="file" accept="image/*"
                           class="form-control form-control-lg" onchange="previewImage(event)" />
                </div>

                <!-- Preview -->
                <div class="text-center mb-3">
                    <img id="previewImg"
                         src="https://via.placeholder.com/160x220?text=No+Image"
                         class="shadow-sm"
                         style="width:160px; height:220px; object-fit:cover; border-radius:10px;" />
                </div>

                <!-- Thể loại -->
                <div class="mb-3">
                    <label asp-for="MaTheLoai" class="form-label fw-semibold">Thể loại</label>
                    <select asp-for="MaTheLoai" class="form-select form-select-lg"
                            asp-items="ViewBag.MaTheLoai"></select>
                </div>

                <!-- Nút -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary fw-bold px-4 py-2"
                            style="border-radius: 10px; font-size: 18px;">
                        <i class="bi bi-save me-2"></i> Tạo mới
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4 py-2"
                       style="border-radius: 10px; font-size: 18px;">
                        <i class="bi bi-arrow-left-circle me-2"></i> Quay lại
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            var imgPreview = document.getElementById('previewImg');
            imgPreview.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
