@model QLBanSach.Models.Sach

@{
    ViewData["Title"] = "Xóa sách";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm p-4">
    <h3 class="text-danger fw-bold mb-3">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Bạn có chắc chắn muốn xóa sách này?
    </h3>

    <hr />

    <div class="row">
        <!-- Ảnh sách -->
        <div class="col-md-4 text-center">
            <img src="~/Images/@Model.Anh"
                 class="border rounded"
                 style="width:230px; height:300px; object-fit:cover;" />
        </div>

        <!-- Thông tin sách -->
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Tên sách</dt>
                <dd class="col-sm-8">@Model.TenSach</dd>

                <dt class="col-sm-4">Tác giả</dt>
                <dd class="col-sm-8">@Model.TacGia</dd>

                <dt class="col-sm-4">Nhà xuất bản</dt>
                <dd class="col-sm-8">@Model.NhaXuatBan</dd>

                <dt class="col-sm-4">Năm xuất bản</dt>
                <dd class="col-sm-8">@Model.NamXuatBan</dd>

                <dt class="col-sm-4">Giá</dt>
                <dd class="col-sm-8">@String.Format("{0:N0} đ", Model.Gia)</dd>

                <dt class="col-sm-4">Số lượng</dt>
                <dd class="col-sm-8">@Model.SoLuong</dd>

                <dt class="col-sm-4">Mô tả</dt>
                <dd class="col-sm-8">@Model.MoTa</dd>

                <dt class="col-sm-4">Thể loại</dt>
                <dd class="col-sm-8">@Model.TheLoai?.TenTheLoai</dd>
            </dl>

            <!-- Form xóa -->
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="MaSach" />

                <button type="submit" class="btn btn-danger fw-bold px-4">
                    <i class="bi bi-trash-fill me-1"></i> Xóa sách
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                    <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>
