@model QLBanSach.Models.Sach

@{
    ViewData["Title"] = "Chi tiết sách";
}
<style>
    .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #e9ecef;
        border: none;
        width: 38px;
        height: 38px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        cursor: pointer;
        color: #333;
        transition: 0.2s;
    }

        .close-btn:hover {
            background: #ced4da;
        }
</style>
<div class="container mt-4 position-relative">

    <!-- Nút X quay lại -->
    <a asp-action="Index" class="close-btn">
        <i class="fa-solid fa-xmark"></i>
    </a>

    <div class="row">
        <div class="col-md-4 text-center">
            <img src="~/Images/@Model.Anh"
                 class="img-fluid rounded shadow"
                 style="max-height: 420px; object-fit: cover;" />
        </div>

        <div class="col-md-8">
            <h2 class="fw-bold">@Model.TenSach</h2>
            <hr />

            <p><strong>Tác giả:</strong> @Model.TacGia</p>
            <p><strong>Nhà xuất bản:</strong> @Model.NhaXuatBan</p>
            <p><strong>Năm XB:</strong> @Model.NamXuatBan</p>

            <h4 class="text-primary fw-bold">
                @String.Format("{0:N0} VNĐ", Model.Gia)
            </h4>

            <p><strong>Số lượng còn:</strong> @Model.SoLuong</p>
            <p>
                <strong>Thể loại:</strong>
                @Model.TheLoai?.TenTheLoai
            </p>

            <div class="mt-3">
                <h5 class="fw-bold">Mô tả</h5>
                <div class="p-3 bg-light rounded shadow-sm">
                    @Model.MoTa
                </div>
            </div>

            <div class="mt-4">

                @{
                    bool isAdmin = Context.Session.GetString("VaiTro") == "True";
                    bool isLogged = Context.Session.GetString("UserId") != null;
                }

                @if (!isAdmin)
                {
                    <form method="post" action="@Url.Action("InsertGioHang", "GioHang")" class="d-inline">
                        <input type="hidden" name="id" value="@Context.Session.GetString("UserId")" />
                        <input type="hidden" name="maSach" value="@Model.MaSach" />
                        <button type="submit" class="btn btn-success px-4 me-2">
                            Thêm vào giỏ
                        </button>
                    </form>
                }

            </div>

        </div>
    </div>
</div>
