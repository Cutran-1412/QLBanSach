@model IEnumerable<QLBanSach.Models.NguoiDung>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Tiêu đề -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary fw-bold">
        <i class="bi bi-people-fill"></i> Quản lý người dùng
    </h2>

    <a asp-action="Create" class="btn btn-primary px-4">
        <i class="bi bi-person-plus-fill"></i> Thêm người dùng
    </a>
</div>

<!-- Bộ lọc -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">

        <form method="get">
            <div class="row g-3">
                <!-- Hàng 1: 3 ô -->
                <div class="col-md-4">
                    <label class="fw-semibold">Mã / Tài khoản / Họ tên</label>
                    <input type="text" name="keyword" class="form-control"
                           value="@Context.Request.Query["keyword"]"
                           placeholder="Nhập từ khóa..." />
                </div>

                <div class="col-md-4">
                    <label class="fw-semibold">Email</label>
                    <input type="text" name="email" class="form-control"
                           value="@Context.Request.Query["email"]"
                           placeholder="Nhập email..." />
                </div>

                <div class="col-md-4">
                    <label class="fw-semibold">Số điện thoại</label>
                    <input type="text" name="sdt" class="form-control"
                           value="@Context.Request.Query["sdt"]"
                           placeholder="Nhập SĐT..." />
                </div>

                <!-- Hàng 2: 2 ô + nút -->
                <div class="col-md-4">
                    <label class="fw-semibold">Địa chỉ</label>
                    <input type="text" name="diachi" class="form-control"
                           value="@Context.Request.Query["diachi"]"
                           placeholder="Nhập địa chỉ..." />
                </div>

                <div class="col-md-4">
                    <label class="fw-semibold">Vai trò</label>
                    <select name="vaitro" class="form-select">
                        <option value="">-- Tất cả --</option>

                        @if (Context.Request.Query["vaitro"] == "true")
                        {
                            <option value="true" selected>Quản trị viên</option>
                        }
                        else
                        {
                            <option value="true">Quản trị viên</option>
                        }

                        @if (Context.Request.Query["vaitro"] == "false")
                        {
                            <option value="false" selected>Người dùng</option>
                        }
                        else
                        {
                            <option value="false">Người dùng</option>
                        }
                    </select>

                </div>

                <!-- Nút -->
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-primary px-4 me-2">
                        <i class="bi bi-funnel-fill"></i> Lọc
                    </button>

                    <a href="/NguoiDungs/Index"
                       class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-clockwise"></i> Reset
                    </a>
                </div>
            </div>
        </form>

    </div>
</div>


<!-- Bảng danh sách -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white fw-semibold">
        <i class="bi bi-list-ul"></i> Danh sách người dùng
    </div>

    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Mã người dùng</th>
                    <th>Tài khoản</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>SĐT</th>
                    <th>Địa chỉ</th>
                    <th>Vai trò</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaNguoiDung</td>
                        <td>@item.TaiKhoan</td>
                        <td>@item.HoTen</td>
                        <td>@item.Email</td>
                        <td>@item.SoDienThoai</td>
                        <td>@item.DiaChi</td>

                        <td>
                            <span class="badge @(item.VaiTro ? "bg-primary" : "bg-secondary")">
                                <i class="bi bi-person-badge-fill"></i>
                                @(item.VaiTro ? "Quản trị viên" : "Người dùng")
                            </span>
                        </td>

                        <td class="text-center">

                            <a asp-action="Edit" asp-route-id="@item.MaNguoiDung"
                               class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-fill"></i> Sửa
                            </a>

                            <a asp-action="Details" asp-route-id="@item.MaNguoiDung"
                               class="btn btn-sm btn-info text-white me-1">
                                <i class="bi bi-search"></i> Chi tiết
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.MaNguoiDung"
                               class="btn btn-sm btn-danger">
                                <i class="bi bi-trash-fill"></i> Xóa
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- PHÂN TRANG -->
        <nav class="mt-3">
            <ul class="pagination justify-content-center">

                <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.Page - 1)">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.Page + 1)">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>

            </ul>
        </nav>

    </div>
</div>
