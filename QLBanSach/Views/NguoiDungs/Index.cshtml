@model IEnumerable<QLBanSach.Models.NguoiDung>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary fw-bold">👤 Quản lý người dùng</h2>

    <div class="d-flex align-items-center" style="gap: 10px;">
        <a asp-action="Create" asp-route-searchString="@ViewBag.CurrentFilter" class="btn btn-primary px-4">
            ➕ Thêm người dùng
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white fw-semibold">
        Danh sách người dùng
    </div>

    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Mã người dùng</th>
                    <th>Tài khoản</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>SĐT</th>
                    <th>Địa chỉ</th>
                    <th>Vai trò</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.MaNguoiDung</th>
                        <td>@item.TaiKhoan</td>
                        <td>@item.HoTen</td>
                        <td>@item.Email</td>
                        <td>@item.SoDienThoai</td>
                        <td>@item.DiaChi</td>
                        <td>
                            <span class="badge @(item.VaiTro ? "bg-primary" : "bg-secondary")">
                                @(item.VaiTro ? "Quản trị viên" : "Người dùng")
                            </span>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.MaNguoiDung" class="btn btn-sm btn-warning me-1">
                                ✏️ Sửa
                            </a>
                            <a asp-action="Details" asp-route-id="@item.MaNguoiDung" class="btn btn-sm btn-info text-white me-1">
                                🔍 Chi tiết
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MaNguoiDung" class="btn btn-sm btn-danger">
                                🗑️ Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Page navigation" class="mt-3">
            <ul class="pagination justify-content-center">

                <!-- Nút Previous -->
                <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page - 1)">Previous</a>
                </li>

                <!-- Các số trang -->
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }

                <!-- Nút Next -->
                <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page + 1)">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>