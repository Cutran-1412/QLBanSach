@model IEnumerable<QLBanSach.Models.TheLoai>

@{
    ViewData["Title"] = "Quản lý thể loại";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-3">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary"><i class="bi bi-journals"></i> Danh sách thể loại</h2>

        <a class="btn btn-primary px-3" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Thêm thể loại
        </a>
    </div>
    <form asp-action="Index" method="get" class="card p-3 shadow-sm rounded-4 mb-3">
        <div class="row g-2">

            <div class="col-md-3">
                <label class="fw-semibold mb-1">Mã thể loại</label>
                <input type="text" name="maTL"
                       class="form-control"
                       placeholder="Nhập mã thể loại"
                       value="@Context.Request.Query["maTL"]" />
            </div>

            <div class="col-md-3">
                <label class="fw-semibold mb-1">Tên thể loại</label>
                <input type="text" name="tenTL"
                       class="form-control"
                       placeholder="Nhập tên thể loại"
                       value="@Context.Request.Query["tenTL"]" />
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button class="btn btn-primary w-100 fw-semibold">
                    <i class="bi bi-search"></i> Tìm
                </button>
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <a asp-action="Index" class="btn btn-secondary w-100 fw-semibold">
                    <i class="bi bi-arrow-repeat"></i> Reset
                </a>
            </div>

        </div>
    </form>

    <div class="card shadow-sm rounded-4 p-3">

        <table class="table table-bordered table-hover align-middle">
            <thead class="bg-primary text-white text-center">
                <tr>
                    <th style="width:120px;">Mã TL</th>
                    <th class="text-center">Tên thể loại</th>
                    <th style="width:220px;" class="text-center">Hành động</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center fw-semibold">@item.MaTheLoai</td>

                        <td class="text-center">@item.TenTheLoai</td>

                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">

                                <a class="btn btn-warning btn-sm px-3"
                                   asp-action="Edit"
                                   asp-route-id="@item.MaTheLoai">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>

                                <a class="btn btn-danger btn-sm px-3"
                                   asp-action="Delete"
                                   asp-route-id="@item.MaTheLoai">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav class="d-flex justify-content-center mt-3">
            <ul class="pagination">

                <!-- Nút Previous -->
                <li class="page-item @(ViewBag.Page <= 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.Page - 1)">
                        ←
                    </a>
                </li>

                <!-- Các số trang -->
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i">@i</a>
                    </li>
                }

                <!-- Nút Next -->
                <li class="page-item @(ViewBag.Page >= ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.Page + 1)">
                        →
                    </a>
                </li>

            </ul>
        </nav>

    </div>
</div>
