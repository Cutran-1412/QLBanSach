@model IEnumerable<QLBanSach.Models.TheLoai>

@{
    ViewData["Title"] = "Danh sách thể loại";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">➕ Thêm thể loại mới</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor((QLBanSach.Models.TheLoai m) => m.TenTheLoai)
            </th>
            <th style="width:170px;">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.TenTheLoai ?? "—")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.MaTheLoai">Sửa</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.MaTheLoai">Chi tiết</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.MaTheLoai">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
