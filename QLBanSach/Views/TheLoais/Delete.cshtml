@model QLBanSach.Models.TheLoai

@{
    ViewData["Title"] = "Xóa thể loại";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4" style="max-width:650px;">

    <div class="card shadow-sm rounded-4 p-4 text-center">

        <h3 class="text-danger fw-bold mb-2">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> Xác nhận xóa thể loại
        </h3>

        <p class="text-muted mb-3">
            Thao tác này không thể hoàn tác. Hãy kiểm tra thông tin trước khi xóa!
        </p>
        <hr />

        <div class="mb-3 text-start">
            <label class="fw-semibold text-primary">Mã thể loại:</label>
            <div class="border rounded-3 p-2 bg-light fw-bold">
                @Model.MaTheLoai
            </div>
        </div>

        <div class="mb-4 text-start">
            <label class="fw-semibold text-primary">Tên thể loại:</label>
            <div class="border rounded-3 p-2">
                @Model.TenTheLoai
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MaTheLoai" />

            <div class="d-flex justify-content-between mt-4">

                <a asp-action="Index" class="btn btn-secondary px-4 py-2 fw-semibold rounded-3">
                    <i class="bi bi-arrow-left-circle me-1"></i> Hủy & Quay lại
                </a>

                <button type="submit" class="btn btn-danger px-4 py-2 fw-semibold rounded-3">
                    <i class="bi bi-trash-fill me-1"></i> Xác nhận xóa
                </button>

            </div>
        </form>

    </div>
</div>
