@model QLBanSach.Models.TheLoai

@{
    ViewData["Title"] = "Thêm thể loại";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4" style="max-width:650px;">

    <div class="card shadow-sm rounded-4 p-4">

        <div class="text-center mb-3">
            <h3 class="fw-bold text-primary">
                <i class="bi bi-plus-circle me-2"></i> Thêm thể loại mới
            </h3>
            <p class="text-muted mb-1">Nhập thông tin thể loại cần thêm vào hệ thống</p>
            <hr />
        </div>

        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Mã thể loại -->
            <div class="mb-3">
                <label asp-for="MaTheLoai" class="form-label fw-semibold"></label>
                <input asp-for="MaTheLoai" class="form-control form-control-lg rounded-3" placeholder="Nhập mã thể loại..." />
                <span asp-validation-for="MaTheLoai" class="text-danger"></span>
            </div>

            <!-- Tên thể loại -->
            <div class="mb-3">
                <label asp-for="TenTheLoai" class="form-label fw-semibold"></label>
                <input asp-for="TenTheLoai" class="form-control form-control-lg rounded-3" placeholder="Nhập tên thể loại..." />
                <span asp-validation-for="TenTheLoai" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-4">

                <a asp-action="Index" class="btn btn-secondary px-4 py-2 fw-semibold rounded-3">
                    <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
                </a>

                <button type="submit" class="btn btn-primary px-4 py-2 fw-semibold rounded-3">
                    <i class="bi bi-check-circle-fill me-1"></i> Lưu thể loại
                </button>

            </div>

        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
