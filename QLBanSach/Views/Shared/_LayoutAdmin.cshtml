<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- ChartJS -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #e8edf5;
            font-family: 'Segoe UI', sans-serif;
            overflow-x: hidden;
        }

        /* === SIDEBAR === */
        .sidebar {
            width: 300px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: linear-gradient(180deg, #0d6efd, #0548ba);
            color: #fff;
            padding: 25px 20px;
            display: flex;
            flex-direction: column;
        }

            .sidebar h3 {
                font-size: 1.4rem;
                text-align: center;
                margin-bottom: 30px;
                font-weight: 600;
            }

        .nav-section {
            flex-grow: 1;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 14px;
            margin-bottom: 8px;
            font-size: 16px;
            color: #e4eeff;
            border-radius: 10px;
            transition: 0.2s;
        }

            .nav-link:hover {
                background: rgba(255, 255, 255, 0.15);
                color: #fff;
                transform: translateX(4px);
            }

        .active {
            background: rgba(255, 255, 255, 0.3);
            color: #fff !important;
            font-weight: bold;
        }

        .sidebar-footer .btn {
            width: 100%;
            padding: 12px;
            border-radius: 10px;
            font-size: 15px;
            margin-bottom: 10px;
        }

        .btn-back {
            background: #ffffff;
            color: #0d6efd;
        }

        .btn-logout {
            background: #ff4b4b;
            color: #fff;
        }

        /* === MAIN CONTENT === */
        .main-wrapper {
            margin-left: 300px;
            padding: 20px;
            width: calc(100% - 300px);
            min-height: 100vh;
        }

        .admin-header {
            background: white;
            padding: 20px 25px;
            border-left: 6px solid #0d6efd;
            border-radius: 12px;
            margin-bottom: 20px;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.07);
        }

        main {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.06);
        }

        /* Toast */
        .my-toast {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 16px 30px;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            color: white;
            z-index: 9999;
            opacity: 1;
            transition: 0.5s;
        }

        .success {
            background: #007BFF !important; /* BLUE chuẩn */
        }
        .error {
            background: #dc3545;
        }

        .warning {
            background: #ffc107;
            color: #000;
        }

        .info {
            background: #17a2b8;
        }
    </style>
</head>

<body>

    @if (TempData["Message"] != null)
    {
        <div class="my-toast @TempData["MessageType"]">@TempData["Message"]</div>
    }

    <!-- Sidebar -->
    <nav class="sidebar">

        <h3><i class="bi bi-person-circle me-2"></i>Xin chào, Admin</h3>

        <div class="nav-section">

            <a class="nav-link @(ViewData["Title"]?.ToString() == "Dashboard" ? "active" : "")"
               asp-controller="Admin" asp-action="Index">
                <i class="bi bi-speedometer2"></i> Trang chủ
            </a>

            <a class="nav-link @(ViewData["Title"]?.ToString() == "Quản lý người dùng" ? "active" : "")"
               asp-controller="NguoiDungs" asp-action="Index">
                <i class="bi bi-people"></i> Quản lý người dùng
            </a>

            <a class="nav-link @(ViewData["Title"]?.ToString() == "Quản lý đơn hàng" ? "active" : "")"
               asp-controller="DonHangs" asp-action="Index">
                <i class="bi bi-receipt-cutoff"></i> Quản lý đơn hàng
            </a>

            <a class="nav-link @(ViewData["Title"]?.ToString() == "Quản lý thể loại" ? "active" : "")"
               asp-controller="TheLoais" asp-action="Index">
                <i class="bi bi-bookmarks"></i> Quản lý thể loại
            </a>

            <a class="nav-link @(ViewData["Title"]?.ToString() == "Quản lý sách" ? "active" : "")"
               asp-controller="Saches" asp-action="Index">
                <i class="bi bi-journal-bookmark"></i> Quản lý sách
            </a>

        </div>

        <div class="sidebar-footer">

            <a asp-controller="Home" asp-action="Index" class="btn btn-back">
                <i class="bi bi-house-door me-2"></i> Quay lại trang chính
            </a>

            <!-- Nút mở popup -->
            <button type="button" class="btn btn-logout" data-bs-toggle="modal" data-bs-target="#logoutModal">
                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
            </button>

        </div>

    </nav>

    <!-- Main Content -->
    <div class="main-wrapper">
        <div class="admin-header">
            <h4 class="m-0 text-primary fw-bold">@ViewData["Title"]</h4>
        </div>

        <main>
            @RenderBody()
        </main>
    </div>


    <div class="modal fade" id="logoutModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius:12px;">

                <div class="modal-header text-white" style="background:#0d6efd;">
                    <h5 class="modal-title">Xác nhận đăng xuất</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    Bạn có chắc chắn muốn đăng xuất không?
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>

                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-primary">Đăng xuất</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <script>
        setTimeout(() => {
            document.querySelector(".my-toast")?.style.setProperty("opacity", "0");
        }, 3000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
