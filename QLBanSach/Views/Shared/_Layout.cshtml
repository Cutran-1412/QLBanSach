<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QLBanSach</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/QLBanSach.styles.css" asp-append-version="true" />
    <link href="~/css/layout.css" rel="stylesheet" />

</head>
<body>
    <div class="topbar d-flex justify-content-between">
        <div>
            <span>0999999999</span>
            <span>uneti@gmail.com</span>
            <span>218 Lĩnh Nam, Hà Nội</span>
        </div>
        <div>
            <ul class="navbar-nav ms-auto flex-row">
                @if (Context.Session.GetString("UserName") != null)
                {
                    <li class="nav-item">
                        <span class="nav-link text-white fw-semibold">Xin chào, @Context.Session.GetString("UserName")</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-warning text-dark ms-2" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="text-white me-3" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                    </li>
                    <li class="nav-item">
                        <a class="text-white" asp-controller="Account" asp-action="Create">Đăng ký</a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <form class="d-flex mx-auto" style="width:60%; max-width:600px;">
                    <input class="form-control me-2" type="search" placeholder="Tìm kiếm sản phẩm" style="height:48px; font-size:16px;">
                    <button class="btn btn-primary ms-2" style="height:48px; font-size:16px; width:140px;">Tìm kiếm</button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - QLBanSach - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
