@model QLBanSach.Models.DonHang
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="container mt-4" style="max-width:900px;">

    <div class="card shadow-sm rounded-4 p-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="fw-bold text-primary">
                <i class="bi bi-box-seam"></i> Chi tiết đơn hàng: @Model?.MaDonHang
            </h3>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>

        <hr />

        <div class="mb-3">
            <p><strong><i class="bi bi-geo-alt"></i> Địa chỉ nhận hàng:</strong> @Model?.DiaChiNhanHang</p>
            <p><strong><i class="bi bi-calendar-date"></i> Ngày đặt:</strong> @(Model?.NgayDat.ToString("dd/MM/yyyy"))</p>

            <p>
                <strong><i class="bi bi-truck"></i> Trạng thái:</strong>

                @if (Model.TrangThai == "Đã đặt hàng")
                {
                    <span class="badge bg-primary fw-semibold">Đã đặt hàng</span>
                }
                else if (Model.TrangThai == "Đang giao hàng")
                {
                    <span class="badge bg-warning text-dark fw-semibold">Đang giao hàng</span>
                }
                else if (Model.TrangThai == "Đã nhận hàng")
                {
                    <span class="badge bg-success fw-semibold">Đã nhận hàng</span>
                }
                else if (Model.TrangThai == "Đã hủy")
                {
                    <span class="badge bg-danger fw-semibold">Đã hủy</span>
                }
                else
                {
                    <span class="badge bg-secondary fw-semibold">@Model.TrangThai</span>
                }
            </p>

            @if (Model.TrangThai == "Đã đặt hàng")
            {
                <button type="button" class="btn btn-success fw-bold px-4"
                        onclick="openConfirmModal('@Model.MaDonHang')">
                    <i class="bi bi-check-circle"></i> Xác nhận giao hàng
                </button>
            }
        </div>

        <h5 class="fw-bold">
            <i class="bi bi-journal-bookmark"></i> Sản phẩm trong đơn:
        </h5>

        @if (Model?.ChiTietDonHangs != null && Model.ChiTietDonHangs.Any())
        {
            <table class="table table-bordered table-hover mt-3 align-middle text-center">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>#</th>
                        <th>Tên sách</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        int stt = 1;
                        decimal tongTien = 0;
                    }

                    @foreach (var ct in Model.ChiTietDonHangs)
                    {
                        var gia = ct?.Sach?.Gia ?? 0;
                        var tenSach = ct?.Sach?.TenSach ?? "Chưa có tên";
                        var soLuong = ct?.SoLuong ?? 0;
                        var thanhTien = gia * soLuong;
                        tongTien += thanhTien;

                        <tr>
                            <td>@stt</td>
                            <td class="fw-semibold">@tenSach</td>
                            <td>@soLuong</td>
                            <td>@gia.ToString("N0") đ</td>
                            <td class="fw-bold text-danger">@thanhTien.ToString("N0") đ</td>
                        </tr>

                        stt++;
                    }
                </tbody>

                <tfoot class="fw-bold">
                    <tr>
                        <td colspan="4" class="text-end">Tổng tiền:</td>
                        <td class="text-danger">@tongTien.ToString("N0") đ</td>
                    </tr>
                </tfoot>
            </table>
        }
        else
        {
            <p class="text-muted"><i class="bi bi-exclamation-circle"></i> Đơn hàng chưa có sản phẩm.</p>
        }

    </div>
</div>

<!-- POPUP XÁC NHẬN -->
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-warning">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-truck"></i> Xác nhận giao hàng
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Bạn có chắc muốn chuyển đơn hàng sang <b>Đang giao hàng</b> không?
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Hủy
                </button>

                <a id="confirmBtn" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Đồng ý
                </a>
            </div>

        </div>
    </div>
</div>

<script>
    function openConfirmModal(maDH) {
        document.getElementById("confirmBtn").href = "/DonHangs/GiaoHang/" + maDH;
        var modal = new bootstrap.Modal(document.getElementById("confirmModal"));
        modal.show();
    }
</script>
